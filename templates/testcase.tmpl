<!DOCTYPE html>
<html>
  {% set page_title = title + ' - ABP Test Pages' %}
  <? include head ?>
  <body>
    <? include header ?>
    <div class="site-container">

      {% if description %}
      <section class="site-panel">
        <h2>{{ title }}</h2>
        <p>{{ description }}</p>
      </section>
      {% endif %}

      {{ body|safe }}

      {% if testcase_moreinfo %}
      <section class="site-panel">
        <h2>More information</h2>
        <ul>
        {% for link in testcase_moreinfo %}
          <li><a href="{{link[1]}}">{{link[0]}}</a></li>
        {% endfor %}
        </ul>
      </section>
      {% endif %}

    </div>
    <? include footer ?>
  </body>
</html>
