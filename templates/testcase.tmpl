<!DOCTYPE html>
<html>
  {% set page_title = title + ' - ABP Test Pages' %}
  {% include "../includes/head.tmpl" %}
  <body>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
      const filterElements = document.querySelectorAll(".testcase-filters pre");

      filterElements.forEach(function(element) {
        element.addEventListener("click", function() {
          const filterText = element.textContent;
          const textArea = document.createElement("textarea");
          textArea.value = filterText;

          document.body.appendChild(textArea);
          textArea.select();
          document.execCommand("copy");
          document.body.removeChild(textArea);

          element.innerText = "COPIED!"
          
          setTimeout(function() {
            element.textContent = filterText;
          }, 500);
          });
        });
      });
    </script>
    {% include "../includes/header.tmpl" %}

    {% if description %}
    <section class="site-panel">
      <h2>{{ title }}</h2>
      <p>{{ description }}</p>
    </section>
    {% endif %}

    {% block body %}{% endblock %}

    {% include "../includes/footer.tmpl" %}
  </body>
</html>
