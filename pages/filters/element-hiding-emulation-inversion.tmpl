template = testcase
title = Element Hiding Emulation Inversion
description = Check that element hiding emulation inversion functionality is working as expected.

<style>

.ehei-properties {
  height: 50px;
}

.ehei-properties-not-hide {
  width: 238px;
}

.ehei-has {
  width: 253px;
}

.ehei-has-not-hide {
  height: 52px;
}

.ehei-contains {
  height: 70px;
}

.ehei-chained-parent {
  height: 72px;
}

.ehei-chained {
  width: 198px;
}

.ehei-case {
  height: 78px;
}

.ehei-case-not-hide {
  width: 209px;
}

.ehei-wildcard {
  height: 83px;
}

.ehei-wildcard-not-hide {
  cursor: pointer;
}

.ehei-regex {
  height: 77px;
}

.ehei-regex1 {
  width: 116px;
}

.ehei-regex2 {
  width: 110px;
}

.ehei-regex3 {
  width: 113px;
}

.ehei-regex4 {
  width: 115px;
}

.ehei-contains-regex {
  height: 76px;
}

</style>

{% set case = "Basic :not(:-abp-properties()) usage" %}
{% set id = get_id(case) %}
<section id="{{id}}-section" class="testcase-panel">
  {{ heading(case) }}
  <p>Test that an element hiding emulation filter using a :not(:-abp-properties()) selector hides its target.</p>
  <div id="{{id}}-area" class="testcase-area" >
    <div id="{{id}}-fail-1" class="ehei-properties" data-expectedresult="fail" data-dp="fail" aria-label="{{id}}-fail">Target</div>
    <div  class="testcase-examplecontent ehei-properties ehei-properties-not-hide" aria-label="{{id}}-example">Example Content</div>
  </div>
  <h3>Steps</h3>
  <ul class="testcase-steps">
    <li>Add filter #1.</li>
    <li>Refresh page.</li>
    <li>The red element should be hidden and the space collapsed.</li>
  </ul>
  <h3>Filters</h3>
  <ul id="{{id}}-filters" class="testcase-filters">
    <li><pre>{{ site_url|domain }}#?#.ehei-properties:not(:-abp-properties(width: 238px))</pre></li>
  </ul>
</section>

